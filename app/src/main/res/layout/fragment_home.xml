<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/bg_redondo"
            android:backgroundTint="@color/iviluz"
            android:drawableBottom="@drawable/ic_baseline_add_24"
            android:src="@drawable/ic_baseline_add_24"
            android:textAlignment="gravity"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invitado_por"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="GANAR DE LA SEMANA"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="17sp"
            android:drawablePadding="1dp"
            />

        <ListView
            android:id="@+id/lvGanar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="INFORMACIONES"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="17sp"
            android:drawablePadding="1dp"
            android:layout_marginTop="15dp"
            />

        <ListView
            android:id="@+id/lvNoticia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp" >
        </ListView>


    </LinearLayout>

</LinearLayout>