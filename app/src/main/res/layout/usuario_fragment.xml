<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuarios.UsuarioFragment"
    android:orientation="vertical"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/busqueda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Busqueda..."
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_baseline_search_24"/>


        <Button
            android:id="@+id/addUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/bg_redondo"
            android:backgroundTint="@color/_amarillo"
            android:drawableBottom="@drawable/ic_baseline_add_24"
            android:src="@drawable/ic_baseline_add_24"
            android:textAlignment="gravity"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp" />

    </LinearLayout>

</LinearLayout>