<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lider.LiderFragment"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/addLider"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/redondeado"
            android:backgroundTint="@color/iviluz"
            android:drawableBottom="@drawable/ic_baseline_add_24"
            android:src="@drawable/ic_baseline_add_24"
            android:textAlignment="gravity"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/aux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/iviluz"
        android:text="@color/white"
        android:textColor="@color/white" />

</LinearLayout>